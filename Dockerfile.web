# Stage 1: Build the frontend
FROM node:18-alpine AS builder

WORKDIR /app

# Copy package files
COPY web/package*.json ./

# Install dependencies
RUN npm ci

# Copy source code
COPY web/ ./

# Build the application
RUN npm run build

# Stage 2: Serve with nginx
FROM nginx:alpine

# Copy built assets from builder
COPY --from=builder /app/dist /usr/share/nginx/html

# Copy nginx configuration template
COPY nginx.conf /etc/nginx/templates/default.conf.template

# Set default API backend URL (can be overridden via environment variable)
ENV API_BACKEND_URL=query-processor:8080

EXPOSE 3000

# Nginx will automatically process templates in /etc/nginx/templates/ and substitute environment variables
CMD ["nginx", "-g", "daemon off;"]
